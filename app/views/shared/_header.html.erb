<header class="header trans_300">
  <div class="main_nav_container">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <% if current_user.admin? %>
            <%= link_to "Dashboard", admin_dashboards_path, class: 'btn btn-warning' %>
            <%= link_to "All Users", admin_users_path, class: 'btn btn-primary' %>
            <%= link_to "Assignments", admin_assignments_path, class: 'btn btn-success' %>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
          <% else %>
            <%= link_to "Dashboard", root_path, class: 'btn btn-warning' %>
            <%= link_to "Assignments", users_path, class: 'btn btn-success' %>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>